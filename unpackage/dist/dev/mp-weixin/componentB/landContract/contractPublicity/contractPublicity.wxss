
.news {
	background-color: white;
}
.navp {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding: 30rpx 0;
	margin: 0 30rpx;
	border-bottom: 0.24rpx solid #eae9e9;
}
.main {
	position: relative;
	-webkit-box-flex:1;
	-webkit-flex:1;
	        flex:1;
}
.publicity-title {
	font-size: 32rpx;
}
.publicity-date {
	position: absolute;
	font-size: 24rpx;
	right: 0;
	color: #A6A7A6;
}
.publicity-info {
	margin-top: 20rpx;
	font-size: 24rpx;
	word-break: break-word; /* 不允许单词内换行 */
	text-overflow: ellipsis; /* 超出部分为省略号 */
	color: #A6A7A6;
	display: -webkit-box; /* 设置为伸缩盒 */
	-webkit-box-orient: vertical; /* 子元素排列方式 */
	-webkit-line-clamp: 3; /* 显示行数 */
	overflow: hidden; /* 超出部分隐藏 */
}



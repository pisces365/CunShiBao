
.news {
	background-color: white;
}
.nav {
	padding: 30rpx 0;
	margin: 0 30rpx;
	border-bottom: 0.24rpx solid #eae9e9;
}
.title {
	font-size: 32rpx;
	/* font-weight: bold; */
}
.null {
	padding:35rpx 0rpx;
}
.bottom-infomation {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	font-size: 24rpx;
	color: #A6A7A6;
}
.source {
	-webkit-box-flex: 1.5;
	-webkit-flex: 1.5;
	        flex: 1.5;
	color: #939493;
	font-weight: bold;
}
.date {
	-webkit-box-flex: 1.8;
	-webkit-flex: 1.8;
	        flex: 1.8;
}
.reading {
	-webkit-box-flex: 1.1;
	-webkit-flex: 1.1;
	        flex: 1.1;
}
.reading text {
	color: rgba(86,120,243,1);
	background-color: rgba(86,120,243,0.1);
	padding: 5rpx;
	border-radius: 5rpx;
	/* box-shadow: 10rpx 10rpx 20rpx #dbdcdb; */
}
.like {
	-webkit-box-flex: 0.6;
	-webkit-flex: 0.6;
	        flex: 0.6;
}
.like text {
	color: rgba(255,69,91,1);
	background-color: rgba(255,69,91,0.1);
	padding: 5rpx;
	border-radius: 5rpx;
	/* box-shadow: 10rpx 10rpx 20rpx #dbdcdb; */
}


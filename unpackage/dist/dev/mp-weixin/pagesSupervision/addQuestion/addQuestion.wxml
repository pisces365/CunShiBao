<view class="ques"><view class="quesType"><view class="quesType-title">问题类型</view><view class="quesType-array"><block wx:for="{{typeArray}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['quesTypeChange',[index]]]]]}}" class="quesType-item" style="{{(typeIndex==index?'background: #74A0D1;color:white':'background:#efeaea;color:#6AA0F8')}}" bindtap="__e">{{''+item+''}}</view></block></view></view><view class="quesContent"><view class="Con-item"><view class="title"><text>*</text><text>标题</text></view><view class="title-input"><input type="text" placeholder="请填写标题" data-event-opts="{{[['input',[['inputTitle',['$event']]]]]}}" value="{{quesInfo.title}}" bindinput="__e"/></view></view><view class="cross-line"></view><view class="Con-detail"><view class="Con-detail-top"><view class="title"><text>*</text><text>内容</text></view><view class="title-input"><input type="text" value="" disabled="true" placeholder="请描述您的问题,以便我们及时处理"/></view></view><view class="title-textarea"><textarea data-event-opts="{{[['input',[['__set_model',['$0','content','$event',[]],['quesInfo']],['inputContent',['$event']]]]]}}" value="{{quesInfo.content}}" bindinput="__e"></textarea></view></view><view class="uploadImg"><view class="Con-item"><view class="title"><text>*</text><text>图片</text></view><view class="title-input"><input type="text" value="" placeholder="请添加图片以便我们及时了解情况" disabled/></view></view><view class="ImageSquares"><block wx:for="{{imageList}}" wx:for-item="itemImg" wx:for-index="index" wx:key="index"><view><view class="item"><image class="item-image" src="{{itemImg}}" mode="scaleToFill" data-event-opts="{{[['tap',[['previewImageChosen',[index]]]]]}}" bindtap="__e"></image><block wx:if="{{!ifDisabled}}"><image class="deleteImg" src="/static/image/delImg.png" mode="widthFix" data-event-opts="{{[['tap',[['btnDeleteImg',[index]]]]]}}" bindtap="__e"></image></block></view></view></block><block wx:if="{{!ifDisabled&&imageList.length<=3}}"><view data-e